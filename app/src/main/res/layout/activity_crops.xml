<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropsActivity">

    <!-- RecyclerView for showing crops -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCrops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_crop" />

    <!-- Empty state text when no crops exist -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No crops available"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray" />

    <!-- Floating Action Button to add a crop -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCropFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Crop"
        android:src="@drawable/apples"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|end"
        android:layout_gravity="bottom|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
