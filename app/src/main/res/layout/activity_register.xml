        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!--   <EditText
