<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/emptyViewSchemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No schemes available."
        android:visibility="gone"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSchemes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/schemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scheme Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/schemeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scheme description goes here..."
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>
